.contai{display:flex;gap:30px;}
.baner-1{width:60%;height:375px;display:flex;justify-content:flex-end;align-items:center;padding-left:15px;}
.baner-2{width:40%;height:375px;display:flex;justify-content:flex-start;align-items:flex-start;}
.text-box1{padding-right:40px;}
.text-box2{padding-left:40px;}
.heading1{color:#000000;margin:0;}
.heading2{margin:0;color:#ffffff;font-weight:800;font-size:28px;text-transform:uppercase;max-width:200px;line-height:36px;}
.title1{color:#000000;font-weight:700;font-size:60px;}
.title2{color:#ffffff;font-weight:700;font-size:60px;opacity:0.3;line-height:58px;max-width:200px;margin-top:25px;margin-left:-15px;}
.dholida::before{content:'';width:1px;height:1px;background: #ffffff;position:absolute;top: 0%;left: 3%;border-radius:50%;transform:scale(1);transition:all 0.5s ease-in-out;}
.secondori{background:transparent;color:#ffffff;border:1px solid #ffffff;transition:all 0.3s ease-in-out;}
.buton_hover:hover .secondori{color:#000000;transition:all 0.3s ease-in-out;}
.title1 p,.title2 p{margin:0;}

@media screen and (max-width: 989px){
 .padding-sideee{padding:0 30px;} 
  .contai{gap:15px;}
}
@media screen and (max-width: 950px){
  .title1{font-size:40px;}
  .title2{font-size:40px;max-width:105%;}
  .baner-1{height:300px;}
  .baner-2{height:300px;}
  .heading2{font-size:24px;line-height:30px;}
  .margin-arr-0{margin:0;}
  .margin-arr-2{margin-top:20px;}
}
@media screen and (max-width: 650px){
  .contai{flex-direction:column;}
  .baner-1{width:100%;height:250px;}
  .baner-2{width:100%;height:250px;}
}
@media screen and (max-width: 500px){
  .title2{margin-top:40px;}
  .title1 p{font-size:36px;}
  .title2 p{font-size:36px;line-height:40px;}
}
@media screen and (max-width: 276px){
  .title2{margin-top:20px;}
}